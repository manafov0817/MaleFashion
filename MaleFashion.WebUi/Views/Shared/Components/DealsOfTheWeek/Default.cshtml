@model DealOfTheWeek
<section class="categories spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="categories__text">
                    <h2>Paltar <br /> <span>Aksessuarlar</span> <br /> Ayaqqabılar</h2>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="categories__hot__deal">
                    <img src="img/product/@Model.Product.ProductPhotos[0].Photo.Name" alt="">
                    <div class="hot__deal__sticker">
                        <span>Endirim</span>

                        @if (Model.Product.Discount.DiscountWithNumber != null)
                        {
                            <h5>
                                -@(Math.Floor((decimal)Model.Product.Discount.DiscountWithNumber))$
                            </h5>
                        }

                        else if (Model.Product.Discount.DiscountWithPercent != null)
                        {
                            <h5>
                                -@(Math.Floor((decimal)Model.Product.Discount.DiscountWithPercent))%
                            </h5>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-4 offset-lg-1">
                <div class="categories__deal__countdown">
                    <span>Həftənin Endirimi</span>
                    @{ string[] endDate = Model.Product.Discount.EndDate.ToString().Split(" ")[0].Split("/");}

                    <input id="countdownEndDate" type="datetime" value="@endDate[0]/@endDate[1]/@endDate[2]" hidden>

                    <h2>@Model.Product.Name</h2>

                    <div class="categories__deal__countdown__timer" id="countdown">
                        <div class="cd-item">
                            <span>35</span>
                            <p>Days</p>
                        </div>
                        <div class="cd-item">
                            <span>1</span>
                            <p>Hours</p>
                        </div>
                        <div class="cd-item">
                            <span>50</span>
                            <p>Minutes</p>
                        </div>
                        <div class="cd-item">
                            <span>18</span>
                            <p>Seconds</p>
                        </div>
                    </div>
                    <a href="#" class="primary-btn">Shop now</a>
                </div>
            </div>
        </div>
    </div>
</section>